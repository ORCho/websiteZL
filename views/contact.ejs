          <script>
              // Initialize and add the map
              var marker;
     function initMap() {
                // The location of Uluru
                var uluru = {lat: 31.29, lng: 121.31};
                // The map, centered at Uluru
                var map = new google.maps.Map(
                    document.getElementById('map'), {
                      zoom: 10, 
                      gestureHandling: 'greedy',
                      center: uluru,
                      zoomControl: false,
                      disableDefaultUI: true,
                    });
                // The marker, positioned at Uluru
        marker = new google.maps.Marker({
                  position: {lat:31.417,lng:121.214}, 
                map: map,
                animation: google.maps.Animation.DROP,
                });


         marker.addListener('mouseover', toggleBounce);
        
        
        
        var contentstring="<p style='font-size:1rem' class='text-left'>Zlink AI  纵凌科技  <br> 上海市嘉定区城北路1585号11号楼</p></a>"
        
        
        var infoWindow=new google.maps.InfoWindow({
                  content:contentstring,
                  pixelOffset: new google.maps.Size(0,-10)
                });
                
        marker.addListener('mouseover', function(){
                  infoWindow.open(map,marker);
                  setTimeout(function () { infoWindow.close(); }, 5000);
                });
          

        marker.addListener('click', function() {
              map.setZoom(16);
                map.setCenter(marker.getPosition());
                 });

  google.maps.event.addListener(marker, 'click', function() {window.open('https://www.google.com/maps/place/Cheng+Bei+Lu,+Jiading+Qu,+Shanghai+Shi,+China/@31.4172991,121.2137399,19z/data=!3m1!4b1!4m5!3m4!1s0x35b240f618473dff:0x1e9a5d1568969c28!8m2!3d31.4172991!4d121.2142871')});

              }


  function toggleBounce() {
  if (marker.getAnimation() !== null) {
    marker.setAnimation(null);
  } else {
    marker.setAnimation(google.maps.Animation.BOUNCE);
    setTimeout(function(){ marker.setAnimation(null); }, 750);
  }
}
                  </script>
